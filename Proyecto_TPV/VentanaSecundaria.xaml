<Window x:Class="Proyecto_TPV.VentanaSecundaria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_TPV"
        mc:Ignorable="d"
        Title="VentanaSecundaria" Height="300" Width="300" Background="Bisque">
    <Grid>
        <StackPanel Name="panelActualizarPrecio" Orientation="Horizontal" Height="30" Width="300">
            <Label Content="Nuevo precio" Style="{StaticResource textoNegrita}"/>
            <TextBox     Name="textBoxNuevoPrecio" Width="100" TextChanged="textBoxNuevoPrecio_TextChanged"/>
            <Button Name="buttonAceptarNuevoPrecio" Content="Aceptar" Style="{StaticResource botonLogOut}" Click="buttonAceptarNuevoPrecio_Click" Height="30" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
